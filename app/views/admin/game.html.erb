<table id="game">
  <tr>
    <th>游戏</th>
    <th>游戏详情</th>
    <th>平台</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @games.each do |game| %>
    <tr>
      <td><%= game.name %></td>
      <td><%= game.game_info %></td>
      <td><%= game.platform %></td>
      <td><%= link_to 'show', game_path(game) %></td>
      <td><%= link_to 'edit', edit_game_path(game) %></td>
      <td><%= link_to 'delete', game_path(game), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>