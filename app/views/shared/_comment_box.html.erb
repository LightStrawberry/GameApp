<div class="comment-box">
	<% if current_user %>
		<%= form_for(Comment.new(:game_id => game.id, :user_id => current_user.id), remote: true) do |f| %>
			<%= f.hidden_field :game_id %>
			<%= f.hidden_field :user_id  %>
			<%= f.text_area :content %>
			<%= submit_tag '提交评论', class: 'btn btn-primary btn-submit' %>
		<% end %>
	<% else %>
		<%= link_to "登录发评论", login_path %>
	<% end %>
</div>
<script>
  $(".comment-box textarea#comment_content").keydown(function(e) {
    if ((e.ctrlKey||e.metaKey) && e.keyCode == 13) {
      $(".comment-box input[type=submit]").click();
    }
  });
</script>